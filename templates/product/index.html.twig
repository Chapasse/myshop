{% extends 'base.html.twig' %}

{% block title %}myShop{% endblock %}

{% block body %}
<div class="text-center"><h1>myShop</h1></div>
	<div class="row">
		{% for item in products %}
        {% if item.stock > 0 %}
			<div class="col-md-4">
				<div class="card mb-3" style="width: 18rem;">
					<h3 class="card-header">{{ item.titre }}</h3>
					<img src="{{ item.photo }}" alt="Image du tshirt">
					<div class="card-body">
						<p class="card-text">{{ item.description }}</p>
						{% if item.stock < 5 %}
                        <p class="card-text">bientôt en rupture de stock</p>
                        {% else %}
                        <p class="card-text">en stock</p>
                        {% endif %}
                        <p class="card-text text-end fw-bold">{{ item.prix|number_format(2)
 }}€</p>
					</div>
					<div class="card-body text-end">
						<a href="{{path("show", {id: item.id})}}" class="card-link btn btn-primary">Voire</a>
					</div>
				</div>
			</div>
            {% else %}
            <div class="col-md-4">
				<div class="card mb-3 bg-danger" style="width: 18rem;">
					<h3 class="card-header">{{ item.titre }}</h3>
					<img src="{{ item.photo }}" alt="Image du véhicule">
					<div class="card-body">
						<p class="card-text">{{ item.description }}</p>
                        <p class="card-text">Victime de son succès</p>
                        <p class="card-text text-end fw-bold">{{ item.prix }}€</p>
					</div>
					<div class="card-body text-end">
						<a href="{{path("show", {id: item.id})}}" class="card-link btn btn-secondary disabled">Voire</a>
					</div>
				</div>
			</div>

            {% endif %}
		{% endfor %}
	</div>


{% endblock %}
